generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  phone     String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  
  verificationCode String?
  codeExpires      DateTime? 
  isVerified       Boolean    @default(false) 
}